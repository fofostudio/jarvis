{
    "manifest_version": 3,
    "name": "JarvisBot Multi-Platform Automation",
    "version": "1.0",
    "default_locale": "es",
    "description": "Automatiza tareas en m√∫ltiples plataformas",
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "webNavigation",
      "cookies",
      "scripting",
      "notifications",
      "alarms"
    ],
    "host_permissions": [
      "http://jarvisbot.biz/*",
      "https://jarvisbot.biz/*",
      "https://udate.love/*",
      "https://www.amolatina.com/*",
      "https://talkytimes.com/*",
      "https://allcreate.com/*",
      "https://www.sociate.love/*",
      "https://latichatte.com/*",
      "https://timedatechat.com/*",
      "https://lovedatez.com/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": [
          "http://jarvisbot.biz/*",
          "https://jarvisbot.biz/*",
          "https://udate.love/*",
          "https://www.amolatina.com/*",
          "https://talkytimes.com/*",
          "https://allcreate.com/*",
          "https://www.sociate.love/*",
          "https://latichatte.com/*",
          "https://timedatechat.com/*",
          "https://lovedatez.com/*"
        ],
        "js": ["utils/domInteractions.js", "content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "platforms/*",
          "utils/*"
        ],
        "matches": [
          "http://jarvisbot.biz/*",
          "https://jarvisbot.biz/*",
          "https://udate.love/*",
          "https://www.amolatina.com/*",
          "https://talkytimes.com/*",
          "https://allcreate.com/*",
          "https://www.sociate.love/*",
          "https://latichatte.com/*",
          "https://timedatechat.com/*",
          "https://lovedatez.com/*"
        ]
      }
    ]
  }
